<h2><%= "#{@model_selection}s search for #{@word}" %></h2>

<% if @model_selection == "User" %>

<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>introduction</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
      <td><%= user.name %></td>
      <td><%= user.introduction %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<% else %>

<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>title</th>
      <th>opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>